@using HRMMVC.Manager
<div class="d-md-flex justify-content-md-between mb-3">
    <div class="col-md-4 card-section">
        <div class="card-section-title">
            <span>Department</span>
        </div>
        <form action="/Setup/Department" class="ajaxform" method="POST">
            @Html.AntiForgeryToken()
            @Html.Hidden("Id", 0, new { Id = "DepartmentId" })
            <label for="DepartmentName" class="control-label">Department Name *</label>
            <input type="text" name="Name" id="DepartmentName" class="form-control" />
            <div class="clearfix">
                <input type="reset" value="Reset" class="btn btn-sm btn-warning float-left" />
                <input type="submit" value="Save" class="btn btn-sm btn-success float-right" />
            </div>
        </form>
        <div class="clearfix">
            <table id="departmentTable" class="short-table">
                <thead>
                    <tr> <th>Id</th> <th>Department Name</th><th></th></tr>
                </thead>
            </table>
        </div>
    </div>
    <div class="col-md-4 card-section">
        <div class="card-section-title">
            <span>Shift</span>
        </div>
        <form action="/setup/Shift" class="ajaxform" method="POST">
            @Html.AntiForgeryToken()
            @Html.Hidden("Id", 0, new { @id = "shiftId" })
            <label for="ShiftName" class="control-label">Shift Name *</label>
            <input type="text" name="Name" id="ShiftName" class="form-control" />
            <div class="d-flex justify-content-between">
                <label for="offficeStart">Start</label>
                <label for="officeEnd">End</label>
            </div>
            <div class="d-flex justify-content-between">
                <input type="time" name="Start" id="offficeStart" value="@Settings.OfficeStart" class="form-control" />
                <input type="time" name="End" id="officeEnd" value="@Settings.OfficeEnd" class="form-control" />
            </div>

            <div class="clearfix">
                <input type="reset" value="Reset" class="btn btn-sm btn-warning float-left" />
                <input type="submit" value="Save" class="btn btn-sm btn-success float-right" />
            </div>
        </form>
        <div class="clearfix">
            <table id="shifttable" class="short-table" width="100%">
                <thead>
                    <tr><th>Sl</th><th>Name</th><th>Start</th><th>End</th><th></th></tr>
                </thead>
            </table>
        </div>
    </div>
    <div class="col-md-4 card-section">
        <div class="card-section-title">
            <span>Allowance</span>
        </div>
        <form action="/Setup/Allowance" class="ajaxform" method="POST">
            @Html.AntiForgeryToken()
            @Html.Hidden("Id", 0, new { Id = "AllowanceId" })
            <label for="AllowanceName" class="control-label">Alowance title *</label>
            <input type="text" name="Title" id="AllowanceName" class="form-control" />
            <div class="clearfix">
                <input type="submit" value="Save" class="btn btn-sm btn-success float-right" />
            </div>
        </form>
        <div class="clearfix">
            <table id="allowanceTable" class="short-table">
                <thead>
                    <tr> <th>Id</th> <th>Allowance</th><th></th></tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="d-md-flex justify-content-md-between">
    <div class="col-md-8 card-section">
        <div class="card-section-title">
            <span>Designations</span>
        </div>
        <form action="/setup/Designation" class="ajaxform" method="POST">
            @Html.AntiForgeryToken()
            @Html.Hidden("Id", 0, new { @id = "DesignationId" })
            @Html.DropDownList("DepartmentId", new SelectList(""), new { @class = "form-control", @id = "DepartmentsId" })
            @Html.Label("Designation", new { @class = "control-label" })
            @Html.TextBox("Title", "", new { @class = "form-control", @id = "Designation" })
            <div class="clearfix">
                <input type="reset" value="Reset" class="btn btn-sm btn-warning float-left" />
                <input type="submit" value="Save" class="btn btn-sm btn-success float-right" />
            </div>
          
        </form>
        <div class="clearfix">
            <table id="designationtable" class="short-table">
                <thead>
                    <tr><th>Sl</th><th>Department</th><th>Designation</th></tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="col-md-4 card-section">
        <div class="card-section-title">
            <span>Deduction</span>
        </div>
        <form action="/Setup/Deduction" class="ajaxform" method="POST">
            @Html.AntiForgeryToken()
            @Html.Hidden("Id", 0, new { Id = "DeductionId" })
            <label for="DeductionName" class="control-label">Deduction title *</label>
            <input type="text" name="Title" id="DeductionName" class="form-control" />
            <div class="clearfix">
                <input type="submit" value="Save" class="btn btn-sm btn-success float-right" />
            </div>
        </form>
        <div class="clearfix">
            <table id="deductionTable" class="short-table">
                <thead>
                    <tr> <th>Id</th> <th>Deduction</th><th></th></tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-footer">
        <a href="/setting/other" class="loadPartial btn btn-sm btn-secondary">Go to System Setting</a>
    </div>
</div>
<div id="javascript" data-function="SetupBasic"></div>

