@model IEnumerable<HRMMVC.Models.Payroll>
@{ 
    ViewBag.title = "Available payrolls";
       
}
<div class="card">
    <div class="card-header">
        Payrolls
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Employee
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Basic_Salary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Updated)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.EmployeeCode) -  @Html.DisplayFor(modelItem => item.Employee.Full_Name)  ,  @Html.DisplayFor(modelItem => item.Employee.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Basic_Salary)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @item.Updated.ToString("dd-MMM-yyyy hh:mm tt")
                            </td>
                            <td>
                                @Html.ActionLink("View", "Details", new { id = item.Id }, new { @class = "loadPartial" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
        <div class="card-footer">
            <a href="/payrolls/set_up" class="btn btn-sm btn-outline-info float-right loadPartial">+New</a>
        </div>
    </div>


