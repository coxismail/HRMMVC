@model IEnumerable<HRMMVC.Models.ApplicationUser>
@{
    ViewData["Title"] = "User Management Boot";
    int i = 0;

}
<div class="col-md-10">
    <div class="card">
        <div class="card-header"> @ViewData["Title"]     </div>
        <div class="card-body">

            <table class="table table-bordered" id="usermanagetable">
                <thead>
                    <tr>
                        <th>Sl</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Permission</th>
                        <th>Lock / Unlock</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        i += 1;
                        <tr>
                            <td>@i</td>
                            <td>@item.DisplayName  </td>
                            <td>@item.UserName</td>
                            <td class="text-center"><a href="/UserManage/Permission?id=@item.Id" class="loadPartial">Permission</a></td>
                            <td class="text-center">
                                @if (item.Lock == true)
                                {
                                    <a href="/UserManage/UnLock?id=@item.Id" class="loadPartial">Unlock</a>
                                }
                                else
                                {
                                    <a href="/UserManage/Lock?id=@item.Id" class="loadPartial">lock</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer">
            <a href="/Account/Register" class="loadPartial btn btn-sm btn-primary float-right">+ New User</a>
        </div>
    </div>
</div>




