@using HRMMVC.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Human Resource Management System</title>
    <style>
        .section {
            width: 330px;
            margin: 0px auto;
            margin: 0px auto;
            padding: 20px 20px;
            box-shadow: -4px 5px 6px 3px black;
            background-color: #d7d7d7;
        }
        .login-control {
            width: 100%;
            height: 30px;
            border: none;
            padding: 2px;
            color: gold;
        }
            .login-control:focus{
                border:none;
                box-shadow:none;
                outline:none;
            }
            .form-group {
                margin-bottom: 15px;
            }
        .logo-banner h1{
            text-align: center;
            font-family: adorable;
            color: green;
        }
        .text-danger{
            color:red;
        }
        .software-title {
            text-align: center;
            display: block;
            font-size: 34px;
            color: 100%;
            color: #2b6f08;
            font-weight: bold;
            font-family: adorable;
        }
        .login-btn {
            padding: 3px 10px;
            background-color: green;
            color: white;
            font-size: 15px;
            outline: none;
            border: none;
            float:right;
        }
        .clearfix {
            clear: both;
            display: block;
            height: 15px;
        }
    </style>
</head>
<body style="
        background-color: #0d3e02b0;
        display: flex;
        justify-content: center;
        align-items: center;
    ">


    <div class="section">

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <span class="software-title">Human Resourse Management System</span>
            <div class="logo-banner">
                
                <h1>Login</h1>
            </div>
            <span class="error-list">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </span>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                <div class="c-input-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "login-control", @placeholder = "yourname@webmail.com" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                <div class="c-input-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "login-control", @placeholder = "*****" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>
            <div class="clearfix">
                    <input type="submit" value="Log in" class="btn login-btn" />
            </div>

            //Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>
        }
        </section>
    </div>

    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>